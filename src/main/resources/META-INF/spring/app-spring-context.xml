<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="classpath:properties/shell.properties"/>

    <import resource="classpath:META-INF/spring/static-data-spring.xml"/>
    <import resource="classpath:META-INF/spring/discount-strategy.xml"/>

    <bean id="userDao" class="com.epam.cinema.dao.StaticDataUserDao">
        <property name="startValues" ref="userList"/>
    </bean>

    <bean id="userService" class="com.epam.cinema.service.UserServiceImpl">
        <constructor-arg ref="userDao"/>
    </bean>


    <bean id="auditoriumDao" class="com.epam.cinema.dao.StaticDataAuditoriumDao">
        <property name="startValues" ref="auditoriumList"/>
    </bean>

    <bean id="auditoriumService" class="com.epam.cinema.service.AuditoriumServiceImpl">
        <constructor-arg ref="auditoriumDao"/>
    </bean>

    <bean id="eventDao" class="com.epam.cinema.dao.StaticDataEventDao">
        <property name="startValues" ref="eventList"/>
    </bean>

    <bean id="eventService" class="com.epam.cinema.service.EventServiceImpl">
        <constructor-arg ref="eventDao"/>
        <constructor-arg ref="auditoriumDao"/>
    </bean>

    <bean id="discountService" class="com.epam.cinema.service.DiscountServiceImpl">
        <constructor-arg ref="discountStrategyList"/>
    </bean>

    <bean id="ticketDao" class="com.epam.cinema.dao.StaticDataTicketDao">

    </bean>

    <bean class="com.epam.cinema.service.BookingServiceImpl">
        <constructor-arg ref="discountService"/>
        <constructor-arg ref="ticketDao"/>
        <constructor-arg ref="eventService"/>
    </bean>

    <bean id="authorizationService" class="com.epam.cinema.service.AuthorizationService"/>

</beans>